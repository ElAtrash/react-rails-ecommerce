<section class="form-signin text-center m" style="width:18rem; margin:0 auto; margin-top: 30px;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Sign In</h1>
    <label for="inputEmail" class="sr-only">Email address</label>
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email address", autocomplete: "current-email" %>
    
    <label for="inputPassword" class="sr-only">Password</label>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", id: "inputPassword" %>
    
    <br />
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    
    <button class="btn btn-lg  btn-dark btn-block" style="background-color: #4D7C8A;" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">Â© 2020</p>
  <% end %>

  <%= render "devise/shared/links" %>
</section>